<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/imv_avt_log_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_item_log_call"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imv_avt_log_call"
        android:layout_alignBottom="@id/imv_avt_log_call"
        android:layout_toRightOf="@id/imv_avt_log_call"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_name_or_phone_log_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ng"
            android:textColor="@color/black"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imv_type_log_call"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/black"
                android:text="ok"></ImageView>

            <ImageView
                android:id="@+id/imv_sim_number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/ic_sim1"
                app:tint="#A8A8A8"
                android:text="ok"></ImageView>

            <TextView
                android:id="@+id/tv_type_log_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="Cuộc gọi đi"></TextView>

            <TextView
                android:id="@+id/tv_time_log_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="19:04"></TextView>
        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_detail_call"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        app:cardBackgroundColor="#AAEAEAEA"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:src="@drawable/ic_baseline_navigate_next_24"></ImageView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>